<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_deaLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.myshulteproject.com.activity.SelectionModeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="30dp"
            android:layout_height="58dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:src="@drawable/img_menu" />

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/bg_round_btn"
            android:text="开始"
            android:textSize="70dp" />

        <TextView
            android:id="@+id/tv_star_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:text="玩游戏，攒星星！ \n规则：每玩一次加1颗星，每产生一次新的记录加2颗星。达到100颗星星可以满足一个小愿望！"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:textColor="#00a3ff"
            android:textSize="30dp" />

        <include layout="@layout/activity_introduce" />

        <include layout="@layout/activity_my_history" />


    </FrameLayout>


    <LinearLayout
        android:id="@+id/rl_left_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFF"
        android:clickable="true"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:text="模式"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="0.5dp"
                    android:background="#999"
                    tools:ignore="Suspicious0dp" />

                <TextView
                    android:id="@+id/tv_normal"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="普通模式"
                    android:textColor="#87CEEB"
                    android:textSize="16dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="0.5dp"
                    android:background="#999"
                    tools:ignore="Suspicious0dp" />

                <include layout="@layout/normal_mode" />


                <TextView
                    android:id="@+id/tv_prime_number"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="素数模式"
                    android:textColor="#87CEEB"
                    android:textSize="16dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="0.5dp"
                    android:background="#999"
                    tools:ignore="Suspicious0dp" />

                <include layout="@layout/prime_number_mode" />

                <TextView
                    android:id="@+id/tv_odd_number"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="奇数模式"
                    android:textColor="#87CEEB"
                    android:textSize="16dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="0.5dp"
                    android:background="#999"
                    tools:ignore="Suspicious0dp" />

                <include layout="@layout/odd_number_mode" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:text="其他"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="0.5dp"
                    android:background="#999"
                    tools:ignore="Suspicious0dp" />

                <TextView
                    android:id="@+id/tv_history"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="记录"
                    android:textColor="#87CEEB"
                    android:textSize="16dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="0.5dp"
                    android:background="#999"
                    android:visibility="gone"
                    tools:ignore="Suspicious0dp" />

                <TextView
                    android:id="@+id/tv_introduce"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="舒尔特表"
                    android:visibility="gone"
                    android:textColor="#999"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="0.5dp"
                    android:background="#999"
                    tools:ignore="Suspicious0dp" />

                <TextView
                    android:id="@+id/tv_set_color_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="色彩方格"
                    android:textColor="#87CEEB"
                    android:textSize="16dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="0.5dp"
                    android:background="#999"
                    tools:ignore="Suspicious0dp" />

                <TextView
                    android:id="@+id/tv_delete_All_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="删除记录"
                    android:textColor="#FF0000"
                    android:textStyle="bold" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
